    <!-- בסוף הקובץ, לפני סגירת תגית body, אוסיף קוד JavaScript כדי לאלץ טעינה מחדש של ה-CSS -->
    <script>
        // אילוץ טעינה מחדש של CSS
        function refreshCSS() {
            var links = document.getElementsByTagName('link');
            for (var i = 0; i < links.length; i++) {
                if (links[i].rel === 'stylesheet') {
                    var href = links[i].href.replace(/\?.*$/, '');
                    links[i].href = href + '?v=' + new Date().getTime();
                }
            }
        }
        
        // הפעלת הפונקציה בטעינת העמוד
        document.addEventListener('DOMContentLoaded', function() {
            refreshCSS();
        });
    </script>

    <!-- קוד לאילוץ רענון CSS -->
    <script>
        // פונקציה לאילוץ רענון של קובץ CSS
        function forceRefreshCSS() {
            var links = document.getElementsByTagName('link');
            for (var i = 0; i < links.length; i++) {
                if (links[i].rel === 'stylesheet') {
                    var href = links[i].getAttribute('href');
                    var newHref = href.split('?')[0] + '?v=' + new Date().getTime();
                    links[i].setAttribute('href', newHref);
                    console.log('Refreshed CSS: ' + newHref);
                }
            }
        }
        
        // הפעלת הפונקציה בטעינת העמוד
        window.addEventListener('load', function() {
            setTimeout(forceRefreshCSS, 100);
        });
    </script>
