    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // קישור לפופאפ המחירים מהפוטר
            const pricingButtonFooter = document.getElementById('open-pricing-popup-footer');
            if (pricingButtonFooter) {
                pricingButtonFooter.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.getElementById('pricing-popup').style.display = 'flex';
                });
            }
            
            // פופאפ לטופס יצירת קשר
            const contactPopupBtn = document.getElementById('open-contact-popup');
            const contactPopup = document.getElementById('contact-popup');
            const closeContactBtn = document.getElementById('close-contact');
            
            if (contactPopupBtn && contactPopup) {
                // הגדרת אירוע לחיצה על הכפתור לפתיחת הפופאפ
                contactPopupBtn.addEventListener('click', function() {
                    contactPopup.style.display = 'flex';
                });
                
                if (closeContactBtn) {
                    closeContactBtn.addEventListener('click', function() {
                        contactPopup.style.display = 'none';
                    });
                }
                
                // סגירת הפופאפ בלחיצה מחוץ לתוכן
                contactPopup.addEventListener('click', function(e) {
                    if (e.target === contactPopup) {
                        contactPopup.style.display = 'none';
                    }
                });
            }

            // טיפול בטופס יצירת קשר בפופאפ
            const contactForm = document.getElementById('local-contact-form');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    // כאן בעתיד ניתן להוסיף קוד לשליחת הטופס לשרת
                    
                    // הצגת הודעת הצלחה
                    const successMessage = document.getElementById('contact-success-message');
                    if (successMessage) {
                        successMessage.style.display = 'block';
                        
                        // איפוס הטופס
                        contactForm.reset();
                        
                        // הסתרת ההודעה אחרי 5 שניות
                        setTimeout(function() {
                            successMessage.style.display = 'none';
                        }, 5000);
                    }
                });
            }
        });
    </script>

