{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/style\\.css",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/public/style.css"
    },
    {
      "src": "/script\\.js",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/public/script.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 